<head>
<style>
.album-title{
  padding: 20px;
    border: 2px solid;
    width: 120px;
    height: 120px;
    margin-left: auto;
    margin-right: auto;
    border-radius: 128px;
    border-style: dotted;
    background-image: url("assets/swirl_pattern.png");
    margin-bottom: 20px;
  }

  .album-title a p{
    word-wrap: break-word;
    position: relative;
    top: 50%;
    transform: translateY(-50%);
    font-weight: bold;
    color: #505050;
  }

  .album-cover {
    word-wrap: break-word;
    border: 2px solid;
    width: 30vmin;
    height: 30vmin;
    padding-top: 12vmin;
    color: #C0C2C3;
    border-radius: 10%;
    font-size: 4vmin;
    margin-bottom: 3vmin;
    background-image: url("assets/low_contrast_linen.png");
    background-size: 200px 200px;
  }

  .album-cover:hover {
    color: white;
    border-color: black;
    transform: scale(1.1,1.1)
  }


</style>
</head>
<body>

<div class="col-md-3" id="album_<%= album.id %>" style="padding:1vmin; margin-bottom: 5vmin">


  
 
    <% if album.photos.exists? %>
       <div class="text-center">
       <%= link_to(image_tag(album.photos.first.image_url(:thumb)),album_photos_path(album.id), :"title" => album.title, :"description" => album.title, :"data-gallery" => "" ,:class => "img-responsive" ) %>
       </div>
       <div class="text-center">
    <button type="button" class="btn btn-default btn-xs" id="edit_albumBtn_<%= album.id %>" >Edit</button>
   <%= link_to 'Delete', album, method: :delete, class: "btn btn-default btn-xs "%>
  </div>
<% else %>

<div class="text-center">
   <%= link_to album.title, album_photos_path(album.id), class: "btn album-cover"%>
  </div>

  <div class="text-center">
    <button type="button" class="btn btn-default btn-xs" id="edit_albumBtn_<%= album.id %>" >Edit</button>
   <%= link_to 'Delete', album, method: :delete, class: "btn btn-default btn-xs "%>
  </div>

<% end %>



  <%= form_for(album, :method => :put, remote: true) do |f| %>
<!-- Modal -->
    <div class="modal fade" id="edit_albumModal_<%= album.id %>" role="dialog" >
      <div class="modal-dialog">
      
        <!-- Modal content-->
        <div class="modal-content">

          <div class="modal-header" style="padding:15px 20px;">
            <button type="button" class="close" data-dismiss="modal">&times;</button>
            <h3 style="text-align:center"> Edit Album</h3>
          </div>

          <div class="modal-body">
            <%= f.label :title %>
            <%= f.text_field :title, class: "form-control album_title" %>
          </div>

          <div class="modal-footer">
            <button type="button" class="btn btn-default btn-sm" data-dismiss="modal">Close</button>
            <%= submit_tag "Save", class: "btn btn-primary btn-sm"%>
          </div>

        </div>

      </div>
    </div>
  <% end %>
  </div>


<script>
$(document).ready(function(){
    $("#edit_albumBtn_<%= album.id %>").click(function(){
        $("#edit_albumModal_<%= album.id %>").modal();
    });
});
</script>


</body>
  
  