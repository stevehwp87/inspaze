<head>
  
 


<!-- Include Required Prerequisites -->
<script type="text/javascript" src="//cdn.jsdelivr.net/jquery/1/jquery.min.js"></script>
<script type="text/javascript" src="//cdn.jsdelivr.net/momentjs/latest/moment.min.js"></script>
<link rel="stylesheet" type="text/css" href="//cdn.jsdelivr.net/bootstrap/latest/css/bootstrap.css" />
 
<!-- Include Date Range Picker -->
<script type="text/javascript" src="//cdn.jsdelivr.net/bootstrap.daterangepicker/2/daterangepicker.js"></script>
<link rel="stylesheet" type="text/css" href="//cdn.jsdelivr.net/bootstrap.daterangepicker/2/daterangepicker.css" />

<script type="text/javascript">
$(function() {
    $('input[name="birthdate"]').daterangepicker({
        singleDatePicker: true,
        showDropdowns: true
    });
    // function(start, end, label) {
    //     var years = moment().diff(start, 'years');
    //     alert("You are " + years + " years old.");
    // });
});
</script>
<style> 
p{
 display: inline;
 padding-right: 20px;
	}
	</style>


</head>

<body>
	<div class="container">
		
	  <div class="col-md-5 col-md-offset-1">

				<%= form_for(@user) do |f| %>

					<div class="form-group">
						<div class="col-md-4">
							<%= f.label :first_name  %>
						</div>
						<div class="col-md-8">
							<%= f.text_field :first_name, :class => "form-control" %>
						</div>
					</div>

					<div class="form-group">
						<div class="col-md-4">
							<%= f.label :last_name %>
						</div>
						<div class="col-md-8">
							<%= f.text_field :last_name, :class => "form-control" %>
						</div>
					</div>

						<div class="form-group">
						<div class="col-md-4">
							<%= f.label :last_name %>
						</div>
						<div class="col-md-8">
							<%= f.date_field :last_name, :class => "form-control" %>
						</div>
					</div>

					

					<div class="form-group">
						<div class="col-md-4">
							<%= f.label :date_of_birth %>
						</div>
							<div class="col-md-8">
						<input type="text" name="birthdate" value="11/27/1987" /> <i class="fa fa-calendar"></i>
						</div>
					</div>


					<div class="form-group">
						<div class="col-md-4">
						  <%= f.label :gender %>
						</div>
						<div class="col-md-8">
					
							<p><input type="radio" id="user_gender_male" name="user[gender]" value="male" checked="checked" />Male</p>
						    <p><input type="radio" id="user_gender_female" name="user[gender]" value="female" />Female</p>
					
						</div>
					</div>

					<div class="form-group">
						<div class="col-md-4">
							<%= f.label :state %>
						</div>
						<div class="col-md-8">
							<%= select(:state, :state_id, [ 
							['Kuala Lumpur',1],
							['Selangor',2],
							['Penang',3],
							['Putrajaya',4],
							['Melaka',5],
							['Johor',6],
							['Negeri Sembilan',7],
							['Pahang',8],
							['Perak',9],
							['Terengganu',10],
							['Kedah',11],
							['Kelantan',12],
							['Perlis',13],
							['Sabah',14],
							['Sarawak',15],
							['Labuan',16]
							]) %>
						</div>
					</div>

					<div class="form-group">
						<div class="col-md-4">
							<%= f.label :phone_no %>
						</div>
						<div class="col-md-8">
							<%= f.text_field :phone_no, :class => "form-control" %>
						</div>
					</div>

					<div class="form-group">
						<div class="col-md-4">
							<%= f.label :email %>
						</div>
						<div class="col-md-8">
							<%= f.email_field :email, :class => "form-control" %>
						</div>
					</div>

					<div class="form-group">
						<div class="col-md-4">
							<%= f.label :password %>
						</div>
						<div class="col-md-8">
							<%= f.password_field :password, :class => "form-control" %>
						</div>
					</div>

					<div class="form-group">
						<div class="col-md-4">
							<%= f.label :password_confirmation, "Confirmation" %>
						</div>
						<div class="col-md-8">
							<%= f.password_field :password_confirmation, :class => "form-control"  %>
						</div>
					</div>

					<div class="form-group">
						<div class="col-md-8 col-md-offset-4">
							<%= f.submit "Save", class: "btn btn-primary" %>
						</div>
					<% end %>
					</div>
	  </div>
  </div>
</body>