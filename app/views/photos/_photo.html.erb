

<div class="col-xs-6 col-sm-4 col-md-3 col-lg-3" id="photo_<%= photo.id %>" style="padding:1vmin; margin-bottom: 5vmin">
  <div>
    <div class="photo-image">
      <%= image_tag(photo.image_url(:thumb)) %>
    </div>
    <div style="padding: 10px 0px">
      <div class="text-center">
        <strong class="pull-left">Name: </strong>
          <%= photo.name %>
        <br>
        <strong class="pull-left">Tags: </strong>
          <%= photo.tag_list %>
          <br>
        <strong class="pull-left">Type: </strong>
          <%= photo.area.type.name %>
        <br>
        <strong class="pull-left">Area: </strong>
          <%= photo.area.name %>
      </div>
    	<div class="text-center">
        <button type="button" class="btn btn-default btn-xs" id="edit_photoBtn_<%= photo.id %>" >Edit</button>
    	  <%= link_to 'Delete', photo, method: :delete, class: "btn btn-default btn-xs "%>
    	</div>
    </div>
  </div>




  <%= form_for(photo, :method => :put) do |f| %>
<!-- Modal -->
  <div class="modal fade" id="edit_photoModal_<%= photo.id %>" role="dialog" >
    <div class="modal-dialog">
    
      <!-- Modal content-->
      <div class="modal-content">

        <div class="modal-header" style="padding:15px 20px;">
          <button type="button" class="close" data-dismiss="modal">&times;</button>
          <h3 style="text-align:center"> Edit photo</h3>
        </div>

        <div class="modal-body">
          <p><strong>Name: </strong><%= f.text_field :name, placeholder: "Name",class: "form-control"%>
          </p>
          <p><strong>Tags: </strong><%= f.text_field :tag_list, placeholder: "Tags(seperate by comma)",class: "form-control" %></p>
          <p><strong>Area: </strong><%= grouped_collection_select(:photo, :area_id, Type.all, :areas, :name, :id, :name) %></p>
        </div>

        <div class="modal-footer">
          <button type="button" class="btn btn-default btn-sm" data-dismiss="modal">Close</button>
          <%= submit_tag "Save", class: "btn btn-primary btn-sm"%>
        </div>

      </div>

    </div>
  </div> 
<% end %>

</div>

<script>
$(document).ready(function(){
    $("#edit_photoBtn_<%= photo.id %>").click(function(){
        $("#edit_photoModal_<%= photo.id %>").modal();
    });
});
</script>


	  
  
  