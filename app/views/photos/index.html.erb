<div class="container">
 <hr>
<h3 class="text-center"><%= @album.title %></h3>

<hr>

  <div class="row">
    <div class="text-center">
      <button type="button" class="btn btn-default btn-sm pull-right" id="myPhotoBtn" >
      New Photo
      </button>
      <%= link_to "Back to Album", albums_path, class: "btn btn-default btn-sm pull-right" %>
      
   
    </div>
  </div>

 <br>

  <div class="row" id="container_photos">
    <div class="col-md-12">
      <%= render @photos %>
    </div>
  </div>


<div class="col-md-3">
<%= form_for [@album, @photo], :html => {:multipart => true}  do |f| %>

<!-- Modal -->
  <div class="modal fade" id="myPhotoModal" role="dialog" >
    <div class="modal-dialog">
    
      <!-- Modal content-->
      <div class="modal-content">

        <div class="modal-header" style="padding:15px 20px;">
          <button type="button" class="close" data-dismiss="modal">&times;</button>
          <h3 style="text-align:center"> New Photo</h3>
        </div>

        <div class="modal-body">       
          <p><%= f.text_field :name, placeholder: "Name",class: "form-control"%>
          </p>
          <p><%= f.text_field :tag_list, placeholder: "Tags(seperate by comma)",class: "form-control" %></p>
          <p><%= f.file_field :image, class: "form-control" %></p>
        </div>

        <div class="modal-footer">
          <button type="button" class="btn btn-default btn-sm" data-dismiss="modal">Close</button>
          <%= submit_tag "Create", class: "btn btn-primary btn-sm"%>
        </div>

      </div>

    </div>
  </div> 

<% end %>
  </div>
</div>

<script>
$(document).ready(function(){
    $("#myPhotoBtn").click(function(){
        $("#myPhotoModal").modal();
    });
});
</script>