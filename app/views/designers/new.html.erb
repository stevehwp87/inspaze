</script>


</head>	
<div class="container">

	<ul class="nav nav-pills">
  <li class="active"><a data-toggle="pill" href="#home">Home</a></li>
  <li><a data-toggle="pill" href="#menu1">Menu 1</a></li>
  <li><a data-toggle="pill" href="#menu2">Menu 2</a></li>
</ul>


<div class="tab-content">
  <div id="home" class="tab-pane fade in active">
    <h3>Contact Information</h3>
    <div class="col-md-8 col-md-offset-0">

				<%= form_for(@designer) do |f| %>

					<div class="form-group">
						<div class="col-md-4">
							<%= f.label :first_name  %>
						</div>
						<div class="col-md-8">
							<%= f.text_field :first_name, :class => "form-control" %>
						</div>
					</div>

					<div class="form-group">
						<div class="col-md-4">
							<%= f.label :last_name %>
						</div>
						<div class="col-md-8">
							<%= f.text_field :last_name, :class => "form-control" %>
						</div>
					</div>

					<div class="form-group">
						<div class="col-md-4">
							<%= f.label :date_of_birth %>
						</div>
							<div class="col-md-8">
						<input type="text" name="birthdate" value="11/27/1987" /> <i class="fa fa-calendar"></i>
						</div>
					</div>


					<div class="form-group">
						<div class="col-md-4">
						  <%= f.label :gender %>
						</div>
						<div class="col-md-8">
							<%= radio_button_tag(:gender, "male") %>
							<%= label_tag(:gender, "Male") %>
							<%= radio_button_tag(:gender, "female") %>
							<%= label_tag(:gender, "Female") %>
						</div>
					</div>

					<div class="form-group">
						<div class="col-md-4">
							<%= f.label :state %>
						</div>
						<div class="col-md-8">
							<%= select(:state, :state_id, [ 
							['Kuala Lumpur',1],
							['Selangor',2],
							['Penang',3],
							['Putrajaya',4],
							['Melaka',5],
							['Johor',6],
							['Negeri Sembilan',7],
							['Pahang',8],
							['Perak',9],
							['Terengganu',10],
							['Kedah',11],
							['Kelantan',12],
							['Perlis',13],
							['Sabah',14],
							['Sarawak',15],
							['Labuan',16]
							]) %>
						</div>
					</div>

					<div class="form-group">
						<div class="col-md-4">
							<%= f.label :phone_no %>
						</div>
						<div class="col-md-8">
							<%= f.text_field :phone_no, :class => "form-control" %>
						</div>
					</div>

					<div class="form-group">
						<div class="col-md-4">
							<%= f.label :email %>
						</div>
						<div class="col-md-8">
							<%= f.email_field :email, :class => "form-control" %>
						</div>
					</div>

					<div class="form-group">
						<div class="col-md-4">
							<%= f.label :password %>
						</div>
						<div class="col-md-8">
							<%= f.password_field :password, :class => "form-control" %>
						</div>
					</div>

					<div class="form-group">
						<div class="col-md-4">
							<%= f.label :password_confirmation, "Confirmation" %>
						</div>
						<div class="col-md-8">
							<%= f.password_field :password_confirmation, :class => "form-control"  %>
						</div>
					</div>

					<div class="form-group">
						<div class="col-md-8 col-md-offset-4">
							<%= f.submit "Save", class: "btn btn-primary" %>
						</div>
					<% end %>
					</div>
	  </div>
  </div>
  <div id="menu1" class="tab-pane fade">
    <h3>Company Information</h3>
    	<div class="col-md-8 col-md-offset-0">
    		<%= form_for(@designer) do |f| %>

    			<div class="form-group">
						<div class="col-md-4">
							<%= f.label :company_name  %>
						</div>
						<div class="col-md-8">
							<%= f.text_field :company_name, :class => "form-control" %>
						</div>
					</div>

					<div class="form-group">
						<div class="col-md-4">
							<%= f.label :location  %>
						</div>
						<div class="col-md-8">
							<%= f.text_field :location, :class => "form-control" %>
						</div>
					</div>

					<div class="form-group">
						<div class="col-md-4">
							<%= f.label :years_in_business  %>
						</div>
						<div class="col-md-8">
							<%= select(:years_in_business, :years_in_business_id, [ 
							['less than a years',1],
							['1-5 years',2],
							['5-10 years',3],
							['10-20 years',4],
							['more than 20 years',5]
							]) %>
						</div>
					</div>

					<div class="form-group">
						<div class="col-md-4">
							<%= f.label :profession  %>
						</div>
						<div class="col-md-8">
							<%= f.text_field :profession, :class => "form-control" %>
						</div>
					</div>

					<div class="form-group">
						<div class="col-md-4">
							<%= f.label :name_to_show %>
						</div>
						<div class="col-md-8">
							<%= f.text_field :name_to_show, :class => "form-control" %>
						</div>
					</div>

					<div class="form-group">
						<div class="col-md-4">
							<%= f.label :contact_to_show %>
						</div>
						<div class="col-md-8">
							<%= f.text_field :contact_to_show, :class => "form-control" %>
						</div>
					</div>

					<div class="form-group">
						<div class="col-md-4">
							<%= f.label :website %>
						</div>
						<div class="col-md-8">
							<%= f.text_field :website, :class => "form-control" %>
						</div>
					</div>

					<div class="form-group">
						<div class="col-md-4">
							<%= f.label :business_description %>
						</div>
						<div class="col-md-8">
							<%= f.text_field :business_description,:class => "form-control" %>
						</div>
					</div>

    			<div class="form-group">
						<div class="col-md-8 col-md-offset-4">
							<%= f.submit "Save", class: "btn btn-primary" %>
						</div>
					</div>
			<% end %>
		</div>
  </div>
  <div id="menu2" class="tab-pane fade">
    <h3>Project Photo</h3>
